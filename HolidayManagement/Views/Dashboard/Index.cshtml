@model HolidayManagement.Models.DashboardViewModel
@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#home">User</a></li>
    <li><a data-toggle="pill" href="#menu1">My Calendar</a></li>
    <li><a data-toggle="pill" href="#menu2">Group Management</a></li>
    <li><a data-toggle="pill" href="#menu3">Settings</a></li>
</ul>
<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        <h3>Users</h3>  
        <table><tbody data-bind="foreach: users">
                   <tr>
                       <td data-bind="text: firstName"></td>
                       <td data-bind="text: lastName "></td>
                       <td data-bind="text: email"></td>
                       <td data-bind="text: hireDate"></td>
                       <td data-bind="text:maxDays"></td>
                   </tr>
            </tbody> </table>          
    </div>
    <div id="menu1" class="tab-pane fade">
        <h3>My Calendar</h3>        
    </div>
    <div id="menu2" class="tab-pane fade">
        <h3>Group Management</h3>
        <p>Group management details</p>
    </div>
    <div id="menu3" class="tab-pane fade">
        <h3>Settings</h3>
        <p>Here are the settings.</p>
    </div>
</div>


<script src="~/Scripts/Dashboard/UserModel.js"></script>
<script src="~/Scripts/Dashboard/DashboardModel.js"></script>
<script type="text/javascript">
    InitializeDashboardModel(@Html.Raw(Json.Encode(Model)));
</script>
