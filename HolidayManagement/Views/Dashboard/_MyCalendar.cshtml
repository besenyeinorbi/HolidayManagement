
@{
    ViewBag.Title = "MyCalendar";
}

<h2>MyCalendar</h2>

<button type="button" class="btn btn-primary btn-group-sm" data-toggle="#myModal" data-bind="click: previousMonth">
    Previous
</button>
<span data-bind="text: monthName() +' '+ year()"></span>
<button type="button" class="btn btn-primary btn-group-sm" data-toggle="#myModal" data-bind="click: nextMonth">
    Next
</button>
<button type="button" class="btn btn-primary btn-group-sm bottom-right" data-toggle="modal" data-target="#holiday">
    Add New Holiday
</button>

<table>
    <tbody data-bind="foreach: days">
        <tr>
            <td>
                <div class="day" data-bind="css: {'freeday': isFreeDay}">
                    <span data-bind="text: day"></span> -
                    <span data-bind="text: name"></span>
                </div>
            </td>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="holiday" tabinedex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <p>
                            <select data-bind="options: users,
                                               optionsText: 'fullName',
                                               optionsValue:'id',
                                               value: selectedUserID,                             
                                               optionsCaption: 'Choose User'" class="form-control"></select>
                        </p>
                        <label for="fromDate">Form Date:</label>
                        <input type="text" class="form-control" id="fromDate" data-bind="value: fromDate">
                    </div>
                    <div class="form-group">
                        <label for="toDate">To Date:</label>
                        <input type="text" class="form-control" id="toDate" data-bind="value: toDate">
                    </div>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btn-group-sm" data-toggle="modal" data-target="#myModal" data-bind="click: addVacation">
                        Add
                    </button>            
                                    
                    
                </form>
            </div>
        </div>
    </div>    
</div>



